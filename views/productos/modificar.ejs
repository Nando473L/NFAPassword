<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<div class="container mt-5">
    <form action="/productos/editar" method="post"enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Modificar Producto</h1>
            </div>
            <div class="card-body">
                <input type="text" name="id" id="id" value="<%= product.id %>" hidden>
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" value="<%= product.nombre %>"autofocus>
                <input class="form-control mb-3" type="text" name="descripcion" id="descripcion" placeholder="Descripcion" value="<%= product.descripcion %>">
                <input class="form-control mb-3" type="file" name="foto" id="foto" value="<%= product.foto %>">
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary" type="submit">Modificar producto</button>
            </div>
        </div>
    </form>
</div>

